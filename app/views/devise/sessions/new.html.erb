<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-inputs">

    <h2>Log in</h2>

    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "width-form" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "width-form" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <%= f.button :submit, "Log in", class: "button btn-primary w-100" %>
    <%= render "devise/shared/links" %>

  </div>

<% end %>
