<div id="bg-gradient" onmouseover="document.body.style.overflow='hidden';">

<div class="jamable-logo">
  <%= cl_image_tag ('https://res.cloudinary.com/benjriethmuller/image/upload/v1591780198/Jamable_Logo_Main_Red_g6sabr.png'), width: 250 %>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-inputs login-form">

    <h3>Log in</h3>

    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "width-form" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "width-form" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <%= f.button :submit, "Log in", class: "login-button" %>
    <%= render "devise/shared/links" %>
<% end %>
</div>

</div>
