
  <div class="search-profiles-wrapper">
<%= render 'shared/search' %>

    <h2>Found <%= @profiles.count %> profiles</h2>

    <% @profiles.each do |profile| %>

      <div class="profile-card">
        <div class="image">
          <%= cl_image_tag profile.photo.key, height: 120, width: 120, crop: :fill, class: 'avatar-large' %>
        </div>
        <div class="profile-details">
           <p> <%= profile.username %> </p>
           <p> <%= profile.user_instruments[0].instrument.name %> <br> <%= profile.user_genres[0].genre.name %> </p>
        </div>
           <%= link_to '>', profile_path(profile), class: "btn-arrow forward-arrow" %>
      </div>
    <% end %>

  </div>
